{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES2017",
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "dist"
    },
    "include": [
        "./declarations.d.ts",
        "./src/**/*.ts",
        "./scripts/**/*.ts",
        "./test/**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}
